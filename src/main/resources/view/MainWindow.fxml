<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
    </stylesheets>

    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Open" />
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Open Recent" />
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Save" />
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Save as.." />
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Import" />
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
        </Menu>
        <Menu mnemonicParsing="false" text="View">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Properties" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
            <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#handleAbout" text="About iungo" />
        </Menu>
    </MenuBar>
    <VBox>
        <children>
            <HBox>
                <children>
                    <Button minHeight="5.0" minWidth="30.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="90.0" text="Add">
                        <HBox.margin>
                            <Insets right="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button layoutX="10.0" layoutY="10.0" minHeight="30.0" minWidth="90.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="90.0" text="Edit">
                        <HBox.margin>
                            <Insets right="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button layoutX="85.0" layoutY="10.0" minHeight="30.0" minWidth="90.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="90.0" text="Delete">
                        <HBox.margin>
                            <Insets right="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button layoutX="205.0" layoutY="15.0" minHeight="30.0" mnemonicParsing="false" prefHeight="30.0" text="↶">
                        <HBox.margin>
                            <Insets right="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button layoutX="300.0" layoutY="15.0" minHeight="30.0" mnemonicParsing="false" prefHeight="30.0" text="↷">
                        <HBox.margin>
                            <Insets right="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button layoutX="361.0" layoutY="15.0" minHeight="30.0" mnemonicParsing="false" prefHeight="30.0" text="⟲">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                </children>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </HBox>

            <SplitPane id="splitPane" fx:id="splitPane" dividerPositions="0.4, 0.5">
                <VBox minWidth="150.0" prefWidth="150.0" SplitPane.resizableWithParent="false">
                    <children>
                        <ListView VBox.vgrow="ALWAYS" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
                <VBox fx:id="personList" minWidth="340" prefWidth="340" SplitPane.resizableWithParent="false">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                </VBox>
                <VBox minWidth="340.0">
                    <children>

                        <StackPane fx:id="browserPlaceholder">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                        </StackPane>

                        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </StackPane>

                        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </StackPane>
                    </children>
                </VBox>
            </SplitPane>

            <StackPane fx:id="statusbarPlaceholder" />
        </children>
    </VBox>
</VBox>
